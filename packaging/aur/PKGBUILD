# Maintainer: Jacob Cattrall <https://github.com/krazyjakee>
pkgname=frametap-bin
pkgver=0.1.2
pkgrel=1
pkgdesc="Cross-platform screen capture CLI for macOS, Linux, and Windows"
arch=('x86_64')
url="https://github.com/krazyjakee/frametap"
license=('MIT')
depends=('libx11' 'libxext' 'libxfixes' 'libxinerama' 'pipewire' 'systemd-libs' 'wayland')
provides=('frametap')
conflicts=('frametap')
source=("https://github.com/krazyjakee/frametap/releases/download/v${pkgver}/frametap-cli-linux.zip")
sha256sums=('afc4604753ea53cd974a6ad620ad757950849991173f7c92c1642baeb374ad73')

package() {
    install -Dm755 frametap "${pkgdir}/usr/bin/frametap"
    install -Dm644 <(curl -sL "https://raw.githubusercontent.com/krazyjakee/frametap/v${pkgver}/LICENSE") \
        "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
